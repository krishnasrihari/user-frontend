<h1>Users </h1>
{{#link-to 'users.new'}} Add User {{/link-to}}
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th># Friends</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |user|}}
      <tr>
        <td>{{user.firstName}}</td>
        <td>{{user.lastName}}</td>
        <td>{{user.friends.length}}</td>
        <td>
          {{#link-to 'users.show' user}}Details{{/link-to}}
          |
          {{#link-to 'users.edit' user}}Edit{{/link-to}}
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="5" style="text-align: center; font-style: italic">
          You have no users yet.
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>



